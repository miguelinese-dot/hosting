// Clase para crear la estructura HTML
class CreadorHTML {
    constructor() {
        this.crearEstructura();
        this.inyectarEstilos();
    }

    crearEstructura() {
        document.title = 'F√∫tbol con Miguel S√°nchez';
        
        // Limpiar body
        document.body.innerHTML = '';
        
        // Crear header
        const header = document.createElement('header');
        const h1 = document.createElement('h1');
        h1.textContent = '‚öΩ F√∫tbol con Miguel S√°nchez';
        const p = document.createElement('p');
        p.textContent = 'Tu espacio para el an√°lisis del f√∫tbol mundial';
        header.appendChild(h1);
        header.appendChild(p);
        
        // Crear nav
        const nav = document.createElement('nav');
        const ul = document.createElement('ul');
        ul.id = 'nav-menu';
        nav.appendChild(ul);
        
        // Crear main
        const main = document.createElement('main');
        main.id = 'main-content';
        
        // Crear footer
        const footer = document.createElement('footer');
        const pFooter = document.createElement('p');
        pFooter.textContent = 'F√∫tbol con Miguel S√°nchez. Pasi√≥n por el f√∫tbol mundial.';
        footer.appendChild(pFooter);
        
        // A√±adir todo al body
        document.body.appendChild(header);
        document.body.appendChild(nav);
        document.body.appendChild(main);
        document.body.appendChild(footer);
    }

    inyectarEstilos() {
        const style = document.createElement('style');
        style.textContent = estilos;
        document.head.appendChild(style);
    }
}

// Clase para manejar la navegaci√≥n
class NavegadorWeb {
    constructor() {
        this.seccionActual = 'actual';
        this.inicializar();
    }

    inicializar() {
        this.crearNavegacion();
        this.crearContenido();
        this.mostrarSeccion(this.seccionActual);
        this.animarEntrada();
    }

    crearNavegacion() {
        const navMenu = document.getElementById('nav-menu');
        navMenu.innerHTML = '';

        appData.secciones.forEach(seccion => {
            const li = document.createElement('li');
            const button = document.createElement('button');
            button.textContent = seccion.boton;
            button.id = `btn-${seccion.id}`;
            button.className = seccion.id === this.seccionActual ? 'active' : '';
            button.addEventListener('click', () => this.mostrarSeccion(seccion.id));
            li.appendChild(button);
            navMenu.appendChild(li);
        });
    }

    crearContenido() {
        const mainContent = document.getElementById('main-content');
        mainContent.innerHTML = '';

        appData.secciones.forEach(seccion => {
            const section = document.createElement('section');
            section.id = seccion.id;
            section.className = seccion.id === this.seccionActual ? 'active' : '';

            const h2 = document.createElement('h2');
            h2.textContent = seccion.titulo;
            section.appendChild(h2);

            if (seccion.id === 'actual') {
                this.crearSeccionActual(section);
            } else if (seccion.id === 'mejores') {
                this.crearSeccionMejores(section);
            } else if (seccion.id === 'contacto') {
                this.crearSeccionContacto(section);
            }

            mainContent.appendChild(section);
        });
    }

    crearSeccionActual(section) {
        appData.contenido.actual.parrafos.forEach(texto => {
            const p = document.createElement('p');
            p.textContent = texto;
            section.appendChild(p);
        });
    }

    crearSeccionMejores(section) {
        const intro = document.createElement('p');
        intro.textContent = appData.contenido.mejores.intro;
        section.appendChild(intro);

        const grid = document.createElement('div');
        grid.className = 'jugadores-grid';

        appData.contenido.mejores.jugadores.forEach(jugador => {
            const card = document.createElement('div');
            card.className = 'jugador-card';

            const h3 = document.createElement('h3');
            h3.textContent = `${jugador.medalla} ${jugador.nombre}`;
            card.appendChild(h3);

            const campos = [
                { label: 'Equipo', valor: jugador.equipo },
                { label: 'Posici√≥n', valor: jugador.posicion },
                { label: 'Nacionalidad', valor: jugador.nacionalidad }
            ];

            campos.forEach(campo => {
                const p = document.createElement('p');
                const strong = document.createElement('strong');
                strong.textContent = `${campo.label}: `;
                p.appendChild(strong);
                p.appendChild(document.createTextNode(campo.valor));
                card.appendChild(p);
            });

            const desc = document.createElement('p');
            desc.textContent = jugador.descripcion;
            card.appendChild(desc);

            grid.appendChild(card);
        });

        section.appendChild(grid);
    }

    crearSeccionContacto(section) {
        const contactoBox = document.createElement('div');
        contactoBox.className = 'contacto-box';

        appData.contenido.contacto.parrafos.forEach(texto => {
            const p = document.createElement('p');
            p.textContent = texto;
            contactoBox.appendChild(p);
        });

        const pEmail = document.createElement('p');
        const strong = document.createElement('strong');
        strong.textContent = 'Escr√≠beme a:';
        pEmail.appendChild(strong);
        contactoBox.appendChild(pEmail);

        const emailLink = document.createElement('a');
        emailLink.href = `mailto:${appData.contenido.contacto.email}`;
        emailLink.className = 'email';
        emailLink.textContent = `üìß ${appData.contenido.contacto.email}`;
        contactoBox.appendChild(emailLink);

        const pFinal = document.createElement('p');
        pFinal.style.marginTop = '1.5rem';
        pFinal.textContent = appData.contenido.contacto.mensajeFinal;
        contactoBox.appendChild(pFinal);

        section.appendChild(contactoBox);
    }

    mostrarSeccion(seccionId) {
        const secciones = document.querySelectorAll('section');
        secciones.forEach(seccion => {
            seccion.classList.remove('active');
        });

        const botones = document.querySelectorAll('nav button');
        botones.forEach(boton => {
            boton.classList.remove('active');
        });

        const seccionActiva = document.getElementById(seccionId);
        if (seccionActiva) {
            seccionActiva.classList.add('active');
        }

        const botonActivo = document.getElementById(`btn-${seccionId}`);
        if (botonActivo) {
            botonActivo.classList.add('active');
        }

        this.seccionActual = seccionId;
        window.scrollTo({ top: 0, behavior: 'smooth' });
    }

    animarEntrada() {
        const header = document.querySelector('header');
        header.style.animation = 'fadeIn 1s ease';
    }
}

// Inicializar la aplicaci√≥n
function iniciarApp() {
    new CreadorHTML();
    new NavegadorWeb();
}

// Ejecutar cuando el DOM est√© listo
if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', iniciarApp);
} else {
    iniciarApp();
}
