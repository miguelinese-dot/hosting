    <script>
        function mostrarSeccion(seccionId) {
            // Ocultar todas las secciones
            const secciones = document.querySelectorAll('section');
            secciones.forEach(seccion => {
                seccion.classList.remove('active');
            });

            // Remover clase active de todos los botones
            const botones = document.querySelectorAll('nav button');
            botones.forEach(boton => {
                boton.classList.remove('active');
            });

            // Mostrar la secci√≥n seleccionada
            document.getElementById(seccionId).classList.add('active');
            
            // A√±adir clase active al bot√≥n correspondiente
            document.getElementById('btn-' + seccionId).classList.add('active');

            // Scroll suave hacia arriba
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        // Animaci√≥n de entrada al cargar la p√°gina
        window.addEventListener('load', () => {
            document.querySelector('header').style.animation = 'fadeIn 1s ease';
        });
    </script>
